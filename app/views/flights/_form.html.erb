<%= form_for(@flight) do |f| %>
  <% if @flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
      <% @flight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :airplane_id %><br>
    <%= f.select :airplane_id, Airplane.pluck(:name, :id),
    {:prompt => 'Select Airplane'}, :class => 'signUpFormSelect' %>
  </div>
  <div class="field">
    <%= f.label :flight_number %><br>
    <%= f.number_field :flight_number, :class => 'signUpForm' %>
  </div>
  <div class="field">
    <%= f.label :origin %><br>
    <%= f.text_field :origin, :class => 'signUpForm' %>
  </div>
  <div class="field">
    <%= f.label :destination %><br>
    <%= f.text_field :destination, :class => 'signUpForm' %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date, :class => 'signUpForm' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
