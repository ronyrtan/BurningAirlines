<p id="notice"><%= notice %></p>

<h1>Listing Flights</h1>

<table>
  <thead>
    <tr>
      <th>Airplane</th>
      <th>Flight Number</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.airplane.name %></td>
        <td><%= link_to flight.flight_number, flight %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.date %></td>
        <td><%= flight.seats %></td>
        <% if @current_user.present? && @current_user.admin? %>
          <td><%= link_to 'Show', flight %></td>
          <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
          <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @current_user.present? && @current_user.admin? %>
<%= link_to 'New Flight', new_flight_path, :class => "scaffButton airflightShowButton" %>
<% end %>
