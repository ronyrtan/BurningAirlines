<!DOCTYPE html>
<html>
<head>
  <title>BurningAirlines</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <%= link_to "Home", root_path, :class => 'nav' %>
    <% if @current_user.present? %>
    <%= link_to "Profile", user_path(@current_user), :class => 'nav' %>
    <%= link_to "Search", search_path, :class => 'nav' %>
    <%= link_to "Logout #{ @current_user.name }", login_path, :method => 'delete', :class => 'nav' %>
    <% else %>
    <%= link_to 'Sign in', login_path, :class => "" %>
    <% end %>
  </nav>

<%= yield %>

</body>
</html>
